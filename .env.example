# Entra / App Registration (Graph + Bot use same app)
TENANT_ID=your-tenant-id
CLIENT_ID=your-application-client-id
CLIENT_SECRET=your-client-secret

# Bot / Azure Bot Service (same App Registration)
MicrosoftAppId=your-application-client-id
MicrosoftAppPassword=your-client-secret

# Transcript date range (days to look back)
TRANSCRIPT_DAYS=7

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Web server
PORT=3978

# Optional: user ID for which to fetch transcripts (organizer); if unset, agent may use context
# MEETING_ORGANIZER_USER_ID=user-object-id-guid
